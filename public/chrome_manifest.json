{
  "name": "CSMTools",
  "version": "0.0.1",
  "description": "Counter-Strike market tools in your web browser!",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "scripting"
  ],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://steamcommunity.com/id/*/inventory*",
        "*://steamcommunity.com/profiles/*/inventory*"
      ],
      "js": [
        "basic_communicator.js"
      ],
      "runAt": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inventory-inject.js",
        "css/inventory.css",
        "css/hint.min.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/Simple_Logo_16.png",
      "32": "images/logo/Simple_Logo_32.png",
      "48": "images/logo/Simple_Logo_48.png",
      "128": "images/logo/Simple_Logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo/Simple_Logo_16.png",
    "32": "images/logo/Simple_Logo_32.png",
    "48": "images/logo/Simple_Logo_48.png",
    "128": "images/logo/Simple_Logo_128.png"
  }
}